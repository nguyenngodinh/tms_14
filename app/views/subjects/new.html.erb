<% provide(:title, 'Add new subject') %>
<h1>Add new subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subject) do |f| %>
    	<%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :info %>
      <%= f.text_field :info %>

      <%= f.submit "Create new subject", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
